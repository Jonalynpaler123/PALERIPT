<Window x:Class="PalerWpfProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PalerWpfProject"
        mc:Ignorable="d"
        Title="Perfume" 
        Height="400" Width="700"
        Background="#FFFDF9F6" 
        WindowStartupLocation="CenterScreen">

    <Grid Margin="20" Background="#FFECC5B2">

        <TextBlock
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="#5B3A29"
                   HorizontalAlignment="Center"
                   Margin="0,30,0,0"
                   TextAlignment="Center"><Run/><LineBreak/><Run/><LineBreak/><Run Text="Welcome to Paler Fragrance Perfume "/></TextBlock>

        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Width="300"
                    Margin="0,80,0,0">


            <TextBlock Text="Our fragrances contain 25% to 30% concentration of premium quality fragrance oil imported from France."
                       TextWrapping="Wrap"
                       Margin="0,0,0,20"
                       Foreground="#7B5A47"
                       TextAlignment="Center"/>

            <ComboBox x:Name="PerfumeSelector"
                      Width="200"
                      Height="30"
                      Margin="0,0,0,10"
                      Background="White"
                      Foreground="#5B3A29"
                      FontWeight="SemiBold"
                      SelectedIndex="0"
                      SelectionChanged="PerfumeSelector_SelectionChanged">
                <ComboBoxItem Content="Cloud - ₱300" Tag="300" />
                <ComboBoxItem Content="Vanilla - ₱350" Tag="350" />
                <ComboBoxItem Content="Billesh - ₱400" Tag="400" />
                <ComboBoxItem Content="Cool Its - ₱250" Tag="250" />
            </ComboBox>

            <Button Content="Buy Now"
                    Width="100" Height="35"
                    Background="#C19A6B"
                    Foreground="White"
                    FontWeight="Bold"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="Button_Click"/>
        </StackPanel>

    </Grid>
</Window>
